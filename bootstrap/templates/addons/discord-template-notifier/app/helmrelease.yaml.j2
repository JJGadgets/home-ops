---
apiVersion: helm.toolkit.fluxcd.io/v2beta1
kind: HelmRelease
metadata:
  name: discord-template-notifier
  namespace: default
spec:
  interval: 30m
  chart:
    spec:
      chart: app-template
      version: 2.0.3
      sourceRef:
        kind: HelmRepository
        name: bjw-s
        namespace: flux-system
  install:
    remediation:
      retries: 5
  upgrade:
    remediation:
      retries: 5
  values:
    controllers:
      main:
        containers:
          main:
            image:
              repository: ghcr.io/morphy2k/rss-forwarder
              tag: 0.6.1
            env:
              TZ: "${TIMEZONE}"
    service:
      main: &disableSvc
        enabled: false
    ingress:
      main: *disableSvc
    probes:
      liveness: *disableSvc
      readiness: *disableSvc
      startup: *disableSvc
    persistence:
      data:
        enabled: true
        type: secret
        name: discord-template-notifier-secret
    resources:
      requests:
        cpu: 15m
        memory: 110M
      limits:
        cpu: 15m
        memory: 110M
